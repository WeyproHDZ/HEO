<main id="main">
    <section class="banner-container member-success" style="background-image: url('/Content/images/bg_success.png')">
        <div class="block_container">
            <div class="success-content">
                <h2>購買VIP</h2>
                <div class="rwd_table_wrapper">
                    <table>
                        <thead>
                            <tr>
                                <th>類別</th>
                                <th>內容</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>商品說明</td>
                                <td>購買HeO臉書互惠系統VIP</td>
                            </tr>
                            @if (ViewBag.Payway == 0)
                            {
                                <!--↓使用超商付款時顯示↓-->
                                <tr>
                                    <td>代碼</td>
                                    <td><big>@ViewBag.CodeNo</big><br />(請記下來至7-11 / 全家 / 萊爾富 / OK 做繳費)</td>
                                </tr>
                                <!--↑使用超商付款時顯示↑-->
                                <tr>
                                    <td>實際付款金額</td>
                                    <td>
                                        NT$&nbsp;
                                        <big>@(ViewBag.Amt)</big>&nbsp;元<br>(包含系統手續費)
                                    </td>
                                </tr>
                                <tr>
                                    <td>繳費期限</td>
                                    <td>@ViewBag.DueDate</td>
                                </tr>
                                <tr>
                                    <td>VIP天數</td>
                                    <td>
                                        <big>@ViewBag.Day</big> 天
                                    </td>
                                </tr>
                            }
                            else if (ViewBag.Payway == 1)
                            {
                                <!--↓使用銀行付款時顯示↓-->
                                    <tr>
                                        <td>銀行代碼</td>
                                        <td>
                                            <big>@ViewBag.BankCode</big>&nbsp;@ViewBag.EscrowBank
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>銀行代碼</td>
                                        <td>
                                            <big>@ViewBag.CodeNo</big><br>(轉帳帳號為一次性，請勿多次轉帳)
                                        </td>
                                    </tr>
                                <!--↑使用銀行付款時顯示↑-->
                                <tr>
                                    <td>實際付款金額</td>
                                    <td>
                                        NT$&nbsp;
                                        <big>@(ViewBag.Amt)</big>&nbsp;元<br>(包含系統手續費)
                                    </td>
                                </tr>
                                <tr>
                                    <td>繳費期限</td>
                                    <td>@ViewBag.DueDate</td>
                                </tr>
                                <tr>
                                    <td>VIP天數</td>
                                    <td>
                                        <big>@ViewBag.Day</big> 天
                                    </td>
                                </tr>
                            }
                            else if (ViewBag.Payway == 2)
                            {
                                <tr>
                                    <td>付款方式</td>
                                    <td>
                                        <big>信用卡</big>
                                    </td>
                                </tr>
                                <tr>
                                    <td>付款狀態</td>
                                    <td>
                                        <big>@ViewBag.Status</big><br>
                                    </td>
                                </tr>
                                <tr>
                                    <td>實際付款金額</td>
                                    <td>
                                        NT$&nbsp;
                                        <big>@(ViewBag.Amt)</big>&nbsp;元<br>(包含系統手續費)
                                    </td>
                                </tr>
                                <tr>
                                    <td>繳費日期</td>
                                    <td>@ViewBag.OrderDate</td>
                                </tr>
                                <tr>
                                    <td>VIP天數</td>
                                    <td>
                                        <big>@ViewBag.Day</big> 天
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <p class="font_gray align_center">前往&nbsp;&gt;&nbsp;<a class="font-purple" href="@Url.Action("Membervip", "MemberMs")">會員中心</a></p>
            </div>
        </div>
    </section>
</main>