                            @ViewBag.Url
                            <div class="icon_link"></div>
                        </a>
                    </div>
                    <div class="controls_group">
                        <div class="result-title" id="Number">需求數量：</div>
                        <div class="result-text">@ViewBag.Count</div>
                    </div>
                    <div class="controls_group">
                        <div class="result-title">目前前五筆排程：</div>
                        <div class="rwd_table_wrapper">
                            <table>
                            <thead>
                                <tr>
                                <th>訂單</th>
                                <th>姓名</th>
                                <th>下單讚數</th>
                                <th>狀態</th>
                                <th>未完成讚數</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="highlight">
                                <td class="align_left">000005</td>
                                <td>JESSIE</td>
                                <td>10</td>
                                <td>等待中</td>
                                <td> </td>
                                </tr>
                                <tr>
                                <td class="align_left">000005</td>
                                <td>JESSIE</td>
                                <td>20</td>
                                <td>運行中</td>
                                <td> </td>
                                </tr>
                                <tr>
                                <td class="align_left">000005</td>
                                <td>JESSIE</td>
                                <td>15</td>
                                <td>失敗</td>
                                <td>5</td>
                                </tr>
                                <tr>
                                <td class="align_left">000005</td>
                                <td>JESSIE</td>
                                <td>26</td>
                                <td>失敗</td>
                                <td>4</td>
                                </tr>
                                <tr>
                                <td class="align_left">000005</td>
                                <td>JESSIE</td>
                                <td>20</td>
                                <td>已完成</td>
                                <td> </td>
                                </tr>
                            </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="clear"><a class="btn" href="javascript:;" title="狀態刷新">狀態刷新</a></div>
                </div>
            </div>
        </div>
    </section>
</main>

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="/signalr/hubs"></script>
    <script>        
        var OrderNumber = '@Session["OrderNumber"]';
        $(function () {            
            // Declare a proxy to reference the hub.
            var order = $.connection.orderSuccessHub;
            // Start the connection.
            $.connection.hub.start().done(function () {
                order.server.userConnected(OrderNumber);//呼叫server
            });

            //讓server呼叫(抓取資料)
            order.client.getList = function (userList) {              
                if(userList){                    
                    if (userList == 2) {                        
                        $("#Status").html("已完成");                        
                    }
                    else if (userList == 3) {
                        $("#Status").html("訂單失敗，請重新下單!");                        
                    }
                }
            }

            ////讓server呼叫(移除離開人員)
            //order.client.onUserDisconnected = function () {
            //    Now_Number--;
            //    $(".online-number").html(Now_Number);
            //}
        });
    </script>
}