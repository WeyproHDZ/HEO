@{ 
    var Term = (IEnumerable<Term>)ViewBag.Term;
    Layout = null;
}

<section class="popup_block">
    <div class="popup_inner">
        <div class="popup-img"><img src="~/Content/images/logo_footer.png" /></div>
        <h1 class="popup-title">使用條款與守則</h1>
        <div class="popup-content">
            @foreach (Term TermList in Term)
            {
                <h2>@TermList.Termlang.FirstOrDefault(a => a.Langid == 1).Title</h2>
                <p>@Html.Raw(TermList.Termlang.FirstOrDefault(a => a.Langid == 1).Contents)</p>
            }
        </div>
    </div>
</section>