@model Viprecord
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-collapsed="false" data-widget-sortable="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-pencil-square-o"></i> </span>
                        <h2>編輯購買VIP</h2>
                        <ul class="nav nav-tabs pull-right in">
                            <li><a data-toggle="tab" href="#hb1">基本資料</a></li>
                        </ul>
                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">

                            <form id="form" method="post" class="form-horizontal" enctype="multipart/form-data" action="@Url.Action("EditViprecord", "MemberMs")"
                                  data-bv-message="This value is not valid"
                                  data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
                                  data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
                                  data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">

                                @if (Html.ValidationSummary(true) != null)
                                {
                                    <div class="alert alert-danger alert-block">
                                        <h4 class="alert-heading">Error!</h4>
                                        @Html.ValidationSummary(true)
                                    </div>
                                }
                                @Html.HiddenFor(model => model.Viprecordid)
                                @Html.HiddenFor(model => model.Createdate)
                                @Html.HiddenFor(model => model.Depositnumber)
                                <div id="content" class="tab-content">
                                    <div class="tab-pane" id="hb1">
                                        <fieldset>
                                            <div class="form-group">
                                                <label class="col-lg-2 control-label" for="title">Facebook帳號</label>
                                                <section class="col-lg-3">
                                                    @Html.DropDownListFor(model => model.Memberid, null, "--請選擇--", new Dictionary<string, object>() { { "class", "form-control" } })
                                                </section>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-lg-2 control-label" for="title">天數(天)</label>
                                                <section class="col-lg-3">
                                                    @Html.DropDownList("Vipdetailid", (SelectList)ViewBag.VipdetailList, new Dictionary<string, object>() { { "class", "form-control" } })
                                                </section>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-lg-2 control-label" for="title">付款方式</label>
                                                <section class="col-lg-3">
                                                    <select class="form-control" id="payway" name="payway">
                                                        <option value="0" @(Model.Payway == 0 ? "selected" : "")>超商付款繳款</option>
                                                        <option value="1" @(Model.Payway == 1 ? "selected" : "")>轉帳付款</option>
                                                        <option value="2" @(Model.Payway == 2 ? "selected" : "")>信用卡</option>
                                                    </select>
                                                </section>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-lg-2 control-label" for="title">狀態</label>
                                                <section class="col-lg-3">
                                                    <select class="form-control" id="status" name="status">
                                                        <option value="0" @(Model.Status == 0 ? "selected" : "")>尚未付款</option>
                                                        <option value="1" @(Model.Status == 1 ? "selected" : "")>待確認付款</option>
                                                        <option value="2" @(Model.Status == 2 ? "selected" : "")>完成付款</option>
                                                    </select>
                                                </section>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a class="btn btn-default" href="@Url.Action("Viprecord", "MemberMs")">
                                                取消
                                            </a>
                                            <button class="btn btn-primary" type="submit">
                                                <i class="fa fa-save"></i>
                                                確認
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->

        </div>
        <!-- end row -->

    </section>
    <!-- end widget grid -->

</div>
@section scripts {
    <script>
        var hash = window.location.hash;
        $('ul.nav-tabs li').eq(hash.substr(1)).addClass('active');
        $('.tab-pane').eq(hash.substr(1)).addClass('active');
    </script>
}