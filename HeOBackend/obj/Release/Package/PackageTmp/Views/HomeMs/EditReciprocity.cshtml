@model Setting

<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-collapsed="false" data-widget-sortable="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-pencil-square-o"></i> </span>
                        <h2>系統設定</h2>
                        <ul class="nav nav-tabs pull-right in">
                            <li><a data-toggle="tab" href="#hb1">互惠限值設定</a></li>
                            <li><a data-toggle="tab" href="#hb2">社群間隔時間設定</a></li>
                        </ul>
                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">

                            <form id="form" method="post" class="form-horizontal" enctype="multipart/form-data" action="@Url.Action("EditReciprocity", "HomeMs",new { settingid = ViewBag.settingid })"
                                  data-bv-message="This value is not valid"
                                  data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
                                  data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
                                  data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">

                                @if (Html.ValidationSummary(true) != null)
                                {
                                    <div class="alert alert-danger alert-block">
                                        <h4 class="alert-heading">Error!</h4>
                                        @Html.ValidationSummary(true)
                                    </div>
                                }
                                <div id="content" class="tab-content">
                                    <div class="tab-pane" id="hb1">
                                        @Html.HiddenFor(model => model.Id)
                                        <fieldset>
                                            <div class="form-group">
                                                <label class="col-lg-2 control-label" for="title">最大值</label>
                                                <section class="col-lg-3">
                                                    @Html.TextBoxFor(model => model.Max, new Dictionary<string, object>() { { "class", "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Max)
                                                </section>
                                            </div>
                                        </fieldset>

                                        <fieldset>
                                            <div class="form-group">
                                                <label class="col-lg-2 control-label" for="title">最小值</label>
                                                <section class="col-lg-3">
                                                    @Html.TextBoxFor(model => model.Min, new Dictionary<string, object>() { { "class", "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Min)
                                                </section>
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="tab-pane" id="hb2">
                                        @Html.HiddenFor(model => model.Id)
                                        <fieldset>
                                            <div class="form-group">
                                                <label class="col-lg-2 control-label" for="title">間隔時間(秒)</label>
                                                <section class="col-lg-3">
                                                    @Html.TextBoxFor(model => model.Time, new Dictionary<string, object>() { { "class", "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Time)
                                                </section>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button class="btn btn-primary" type="submit">
                                                <i class="fa fa-save"></i>
                                                確認
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->

        </div>
        <!-- end row -->

    </section>
    <!-- end widget grid -->

</div>
@section scripts {
    <script>
            var hash = window.location.hash;
            $('ul.nav-tabs li').eq(hash.substr(1)).addClass('active');
            $('.tab-pane').eq(hash.substr(1)).addClass('active');
    </script>
}