
@{
    var data = ViewBag.Useragent as IPagedList<Useragent>;
    int x = 0;
}
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                <div class="well padding-10">

                    <!-- widget content -->
                    <div class="widget-body">
                        <div class="widget-body-toolbar">

                            <div class="row">

                                <div class="form-inline">
                                    <div class="col-sm-2">
                                        <a class="btn btn-success btn-labeled" href="@Url.Action("AddUseragent", "UseragentMs")"> <span class="btn-label"><i class="fa fa-plus"></i></span>新增 </a>
                                    </div>
                                </div>

                            </div>

                        </div>
                        <div class="table-responsive">

                            <table class="table table-hover table-bordered table-striped smart-form">
                                <thead>
                                    <tr>
                                        <th width="15%" class="text-center">版本</th>
                                        <th class="text-center">Useragent</th>
                                        <th width="5%" class="text-center">編輯</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Useragent entity in data)
                                    {
                                        <tr>
                                            <td class="text-center">@(entity.Isweb == 0 ? "網頁版" : "手機版")</td>
                                            <td class="text-center">@entity.User_agent</td>
                                            <td class="text-center"><a href="@Url.Action("EditUseragent", "UseragentMs", new { Id = entity.Id, p = ViewBag.pageNumber })" class="btn btn-info btn-xs"><i class="fa fa-edit"></i></a></td>
                                        </tr>
                                        x++;
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <!-- end widget content -->

                    <div class="text-center">
                        @Html.PagedListPager(list: data, generatePageUrl: page => Url.Action("Useragent", new { p = page }))
                    </div>

                </div>

            </article>
            <!-- WIDGET END -->

        </div>
        <!-- end row -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
<!-- Modal -->
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">確認</h4>
            </div>
            <div class="modal-body">
                <p>
                    確定要刪除嗎？
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    取消
                </button>
                <a href="#" class="btn btn-primary btn-ok">
                    確定
                </a>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
